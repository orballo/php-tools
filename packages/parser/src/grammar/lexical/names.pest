VARIABLE_NAME              =  { "$" ~ NAME }
NAMESPACE_NAME             =  { NAME ~ ("\\" ~ NAME)* }
NAMESPACE_NAME_AS_A_PREFIX =  {
    "\\"
  | "\\"? ~ NAMESPACE_NAME ~ "\\"
  | "namespace" ~ "\\" ~ (NAMESPACE_NAME ~ "\\")*
}
QUALIFIED_NAME             =  { NAMESPACE_NAME_AS_A_PREFIX? ~ NAME }
NAME                       = @{ NON_DIGIT ~ (NON_DIGIT | ASCII_DIGIT)* }
NON_DIGIT                  = _{ "_" | ASCII_ALPHA | '\u{80}'..'\u{FF}' }
